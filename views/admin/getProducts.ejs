<%- include('../_head'); %>
</head>
<body>
    <%- include('_header'); %>

    <div class="container">

        <div><h1><%= title %></h1></div>
        <% if (products) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Catégorie</th>
                        <th scope="col">Produit</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(function(currentProduct) { %>
                        <tr>
                            <td>
                                <% if (currentProduct.productCategory) { %>
                                    <a href="<%=baseURL%>/admin/category/<%= currentProduct.productCategory.categorySlug %>">                    
                                    <%= currentProduct.productCategory.categorySlug %>
                                </a>
                                <% } else { %> - <% } %>
                            </td>
                            <th scope="row"><%= currentProduct.productName %> </th>
                            <td><%= currentProduct.productPrice %> €</td>
                            <td><%= currentProduct.productDescription %></td>
                            <td>
                                <div><a href="#" alt="Modifier le produit"><i class="fa-solid fa-pen-to-square px-1"></i>Modifier</a></div>      
                                <div><a href="<%=baseURL%>/admin/delete-product/<%= currentProduct._id %>" alt="Supprimer le produit"><i class="fa-solid fa-trash px-1"></i>Supprimer</a></div>                     
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <p>&nbsp;</p>

        <% } else { %>
            <p class="alert alert-warning"><%= message %></p>
        <% } %>              
  
        <div class="mt-5">
            <a class="btn btn-success btn-sm mb-5" role="button"  href="<%=baseURL%>/admin">Retour au panneau d'administration</a>
        </div>
<%- include('../_footer'); %>