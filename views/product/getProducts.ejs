<%- include('../_head'); %>
</head>
<body>
    <%- include('../_header'); %>
    <h1>Liste des produits</h1>
    <p><%= message %></p>
    <div class="row">
        <% if (products) { %>
            <% products.forEach(function(currentProduct) { %>
                <div class="col-sm-4 col-md-3 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h2><%= currentProduct.productName %> </h2>
                            <div>
                                <span class="badge bg-success"><%= currentProduct.productPrice %> €</span>
                                <p><%= currentProduct.productDescription %></p>
                            </div>
                            <!-- afficher la catégorie de produit -->
                            <div><a class="btn btn-outline-secondary btn-sm" role="button" href="product/<%= currentProduct._id %>">Voir fiche produit</a></div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="alert alert-warning"><%= message %></p>
        <% } %>
    </div>

    <a class="btn btn-success btn-sm mb-5" role="button" href="../categories">Retour à la liste des catégories</a>

    <%- include('../_footer'); %>