<%- include('../_head'); %>
<%- include('_header'); %>
    <div class="container">
        <div class="row">
            <!-- Carte descriptif antenne -->
            <div class="card shadow bg-light rounded col-11 col-md-8 m-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-8 mb-2">Région :
                            <% if (antenna.antennaRegion) { %>
                                <span class="badge bg-light text-dark">
                                    <a href="<%=baseURL%>/admin/antenna/<%= antenna.antennaRegion %>">                    
                                    <%= tabRegions[antenna.antennaRegion] %>
                                    </a>
                                </span>
                            <% } else { %> - <% } %>
                        </div>
                        <div class="col-sm-4 text-end">
                            <!-- <a href="<%=baseURL%>/admin/update-count-sessions/<%= antenna._id %>" class="btn btn-outline-success btn-sm  mb-1 mt-1" role="button"><i class="fa-solid fa-rotate px-1"></i>rafraîchir le compteur de sessions</a> -->
                            <a href="<%=baseURL%>/admin/update-count-sessions/<%= antenna._id %>" class="badge bg-light text-dark" role="button" alt="rafraîchir le compteur de sessions"><i class="fa-solid fa-rotate px-1"></i></a>
                            <span class="badge bg-success"><%= antenna.antennaNbSessions %><i class="fa-solid fa-chalkboard-user px-1"></i></span>
                            <span class="badge bg-secondary"><%= antenna.antennaNbStudents %><i class="fa-solid fa-user-graduate px-1"></i></span>
                        </div>
                    </div>
                    <h2><%= antenna.antennaName %></h2>
                    <span class="badge bg-<%= antenna.antennaStatus ? 'success' : 'danger' %>"><%= antenna.antennaStatus ? 'actif' : 'inactif' %></span> 
                    <small class="text-muted">Slug : <%= antenna.antennaSlug %> </small>
                    <div class="mt-3">
                        <p><%= antenna.antennaDescription %></p>
                    </div>

                    <hr />
                    <div class="row justify-content-around">
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-auto pe-0">
                                    <i class="fas fa-map-marker-alt text-success"></i>
                                </div>
                                <div class="col text-start">
                                    <%= antenna.antennaAddress %>  <br />
                                    <%= antenna.antennaZipCode %>  <%= antenna.antennaCity %> 
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-auto pe-0">
                                    <i class="fas fa-at text-success"></i> 
                                </div>
                                <div class="col text-start">
                                    <%= antenna.antennaEmail %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-auto pe-0">
                                    <i class="fas fa-phone text-success"></i> 
                                </div>
                                <div class="col text-start">
                                    <%= antenna.antennaPhone %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- colonne boutons en 1 colonne en écran medium,  sur une ligne en écran petit -->
            <div class="col pt-md-3">
                <div class="row row-cols-md-1 justify-content-md-center">
                    <div class="col-auto">
                        <a href="<%=baseURL%>/admin/update-antenna/<%= antenna.antennaSlug %>" class="btn btn-outline-success btn-sm m-1" role="button"><i class="fa-solid fa-pen-to-square px-1"></i>Modifier</a>
                    </div>
                    <% if (sessions == 'undefined' || sessions=="") { %>
                        <div class="col-auto">
                            <a href="<%=baseURL%>/admin/delete-antenna/<%= antenna.antennaSlug %>" class="btn btn-secondary btn-sm m-1" role="button"><i class="fa-solid fa-trash px-1"></i>Supprimer</a>                 
                        </div>
                    <% } %>
                    <div class="col-auto">
                        <a href="<%=baseURL%>/admin/create-session/<%= antenna.antennaSlug %>" class="btn btn-outline-success btn-sm m-1" role="button"><i class="fa-solid fa-square-plus px-1"></i>Ajouter une session</a>
                    </div>
                </div>
            </div>
        </div>  
    </div>
        
            <br/>
   
    <% if (sessions && sessions != "") { %>
        <p>Ce centre est lié à <%= antenna.antennaNbSessions %> session(s)</p>
        <%- include('_listSessions'); %>
    <% } else { %>
        <p class="alert alert-warning"><%= message %></p>
    <% } %>

    <div class="mt-5">
        <a class="btn btn-success btn-sm mb-5" role="button"  href="<%=baseURL%>/admin/"><i class="fa-solid fa-layer-group px-2"></i>Retour à l'accueil du panneau d'administration</a>
    </div>
<%- include('../_footer'); %>