<%- include('../_head'); %>
</head>
<body>
    <%- include('_header'); %>

    <div class="container">
        <div><h1><%= title %></h1></div>

        <% if (flashMessage) { %>
            <p class="alert alert-success"><%= flashMessage %></p>
        <% } %> 
        <% if (message) { %>
            <p class="alert alert-success"><%= message %></p>
        <% } %>  
        <% if (categories) { %>
            <form method="post" action="<%=baseURL%>/admin/ajax-create-product">
            <div class="row mb-3">
                <label for="productCategoryId" class="col-sm-2 col-form-label">Catégorie du produit</label>
                <div class="col-sm-10">
                    <select class="form-select" id="productCategoryId" name="productCategoryId">
                    <option>Choisir une catégorie</option>
                    <% categories.forEach(currentCategory => { %>
                        <% if (categorySelected == currentCategory._id) { %>
                            <option value="<%=currentCategory._id %>" selected><%=currentCategory.categoryName %></option>
                        <% } else { %>
                            <option value="<%=currentCategory._id %>"><%=currentCategory.categoryName %></option>
                        <% }  %>
                    <% }) %>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
              <label for="productName" class="col-sm-2 col-form-label">Nom du produit</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="productName" name="productName">
              </div>
            </div>
            <div class="row mb-3">
                <label for="productPrice" class="col-sm-2 col-form-label">Prix du produit</label>
                <div class="col-sm-10">
                  <input type="number" step=".01" class="form-control" id="productPrice" name="productPrice">
                </div>
            </div>
            <div class="row mb-3">
                <label for="productDescription" class="col-sm-2 col-form-label">Description du produit</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="productDescription" name="productDescription" rows="3"></textarea>
                </div>
            </div>

<!-- TODO ajouter un champ fichier pour l'image -->
            <div class="col-12">
                <button class="btn btn-success" type="submit" value="post">Créer le produit</button>
                <a href="<%=baseURL%>/admin/" class="btn btn-secondary" role="button">Annuler</a>
            </div>
        </form>
        <% } else { %>  
            <a class="btn btn-outline-success btn-sm mb-5" role="button"  href="<%=baseURL%>/admin/create-category"><i class="fa-solid fa-square-plus px-1"></i>Créer une catégorie</a>
        <% } %>  

    </div>
   
    <div class="mt-5">
        <a class="btn btn-success btn-sm mb-5" role="button"  href="<%=baseURL%>/admin/"><i class="fa-solid fa-layer-group px-2"></i>Retour à l'accueil du panneau d'administration</a>
    </div>
<%- include('../_footer'); %>