<%- include('../_head'); %>
</head>
<body>
    <%- include('../_header'); %>
    <h1>Détail produit</h1>
    <p><%= message %></p>
    <div class="col-sm-8 col-md-6 mb-4">
        <div class="card shadow bg-body rounded">
            <div class="card-body bg-light">
                <div class="row">
                    <div class="col-8 mb-2">Catégorie : 
                    <% if (product.productCategory) { %>
                        <span class="badge bg-light"><a href="<%=baseURL%>/category/<%= product.productCategory.categorySlug %>">                    
                            <%= product.productCategory.categoryName %>
                        </a></span>
                    <% } else { %> - <% } %>
                    </div>
                    <div class="col-4 text-end">
                        <span class="badge rounded-pill bg-success"><%= product.productPrice %> €</span>
                    </div>
                </div>
                <h2><%= product.productName %> </h2>
                <div>
                    <p><%= product.productDescription %></p>
                </div>
            </div>
        </div>
    </div>

    <a href="../categories" class="btn btn-success btn-sm mb-5" role="button" ><i class="fa-solid fa-layer-group pe-2"></i> Retour à la liste des catégories</a>
    <a href="../products" class="btn btn-success btn-sm mb-5" role="button"><i class="fa-solid fa-list pe-2"></i> Voir la liste de tous les produits</a>

<%- include('../_footer'); %>