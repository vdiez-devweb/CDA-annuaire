<%- include('../_head'); %>
</head>
<body>
    <%- include('../_header'); %>
    <h1>Liste des produits</h1>
    <p><%= message %></p>
    <div class="row">
        <% if (products) { %>
            <% products.forEach(function(currentProduct) { %>
                <div class="col-sm-4 col-md-3 mb-3">
                    <div class="card shadow bg-body rounded">
                        <div class="card-body bg-light">
                            <div class="row">
                                <div class="col-8 mb-2">
                                    <% if (currentProduct.productCategory) { %>
                                        <span class="badge bg-light"><a href="<%=baseURL%>/category/<%= currentProduct.productCategory.categorySlug %>">                    
                                            <%= currentProduct.productCategory.categoryName %>
                                        </a></span>
                                    <% } else { %> - <% } %>
                                </div>
                                <div class="col-4 text-end">
                                    <span class="badge bg-success"><%= currentProduct.productPrice %> €</span>
                                    <!-- <p><%#= currentProduct.productDescription %></p> -->
                                </div>
                            </div>
                            <h4><%= currentProduct.productName %> </h4>
                             
                            <div class="text-center"><a class="btn btn-outline-secondary btn-sm" role="button" href="product/<%= currentProduct._id %>"><i class="fa-solid fa-eye px-1 px-1"></i> Voir fiche produit</a></div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="alert alert-warning"><%= message %></p>
        <% } %>
    </div>

    <a class="btn btn-success btn-sm mb-5" role="button" href="../categories"><i class="fa-solid fa-layer-group pe-2"></i>Retour à la liste des catégories</a>

    <%- include('../_footer'); %>