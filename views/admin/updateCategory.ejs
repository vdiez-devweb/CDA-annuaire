<%- include('../_head'); %>
</head>
<body>
    <%- include('_header'); %>

    <div class="container">
        <div><h1><%= title %></h1></div>
        <% if (message) { %>
            <p class="alert alert-success"><%= message %></p>
        <% } %>  
        <form method="post" action="<%=baseURL%>/admin/ajax-update-category">
            <div class="row mb-3 form-group required">
              <label for="categoryName" class="col-sm-2 col-form-label">Nom de la catégorie</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="categoryName" name="categoryName" required="required" value="<%=category.categoryName %>">
              </div>
            </div>
            <div class="row mb-3 form-group required">
                <label for="categorySlug" class="col-sm-2 col-form-label">Slug de la catégorie</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="categorySlug" name="categorySlug" required="required" value="<%=category.categorySlug %>">
                </div>
            </div>
            <div class="row mb-3 form-group">
                <label for="categoryDescription" class="col-sm-2 col-form-label">Description de la catégorie</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="categoryDescription" name="categoryDescription" rows="3"><%=category.categoryDescription %></textarea>
                </div>
            </div>
            <div class="row mb-3 form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="true" id="categoryImg" <% if (category.categoryImg) { %> checked <% } %>>
                    <label class="form-check-label" for="categoryImg">
                      Présence d'une image nommée avec le Slug de la catégorie ?
                    </label>
                </div>
            </div>
            <input id="id" name="id" type="hidden" value="<%= category._id %>">
<!-- TODO ajouter un champ fichier pour l'image -->
            <div class="col-12 form-group">
                <button class="btn btn-success" type="submit" value="post">Modifier la catégorie</button>
                <a href="<%=baseURL%>/admin/" class="btn btn-secondary" role="button">Annuler</a>
            </div>
        </form>
    </div>
   
    <div class="mt-5">
        <a class="btn btn-success btn-sm mb-5" role="button"  href="<%=baseURL%>/admin/"><i class="fa-solid fa-house-lock pe-2"></i>Retour à l'accueil du panneau d'administration</a>
    </div>
<%- include('../_footer'); %>