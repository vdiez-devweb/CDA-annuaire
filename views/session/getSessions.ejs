<%- include('../_head'); %>
</head>
<body>
    <%- include('../_header'); %>
    <h1>Liste des sessions</h1>
    <div class="row">
        <% if (sessions) { %>
            <% sessions.forEach(function(currentSession) { %>
                <div class="col-sm-4 col-md-3 mb-3">
                    <div class="card shadow bg-body rounded">
                        <div class="card-body bg-light">
                            <div class="row">
                                <div class="col-8 mb-2">
                                    <% if (currentSession.sessionAntenna) { %>
                                        <span class="badge bg-light"><a href="<%=baseURL%>/antenna/<%= currentSession.sessionAntenna.antennaSlug %>">                    
                                            <%= currentSession.sessionAntenna.antennaName %>
                                        </a></span>
                                    <% } else { %> - <% } %>
                                </div>
                                <div class="col-4 text-end">
                                    <span class="badge bg-success"><%= currentSession.sessionPrice %> €</span>
                                    <!-- <p><%#= currentSession.sessionDescription %></p> -->
                                </div>
                            </div>
                            <h4><%= currentSession.sessionName %> </h4>
                             
                            <div class="text-center"><a class="btn btn-outline-secondary btn-sm" role="button" href="session/<%= currentSession._id %>"><i class="fa-solid fa-eye px-1 px-1"></i> Voir fiche centre</a></div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="alert alert-warning"><%= message %></p>
        <% } %>
    </div>

    <a class="btn btn-success btn-sm mb-5" role="button" href="../antennas"><i class="fa-solid fa-layer-group pe-2"></i>Retour à la liste des centres de formation</a>

    <%- include('../_footer'); %>